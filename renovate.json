{
    "extends": [
        "config:js-app"
    ],
    "prConcurrentLimit": 2,
    "semanticCommits": "enabled",
    "baseBranches": [
        "22_1",
        "22_2"
    ],
    "labels": [
        "dependencies"
    ],
    "vulnerabilityAlerts": {
        "enabled": true,
        "automerge": true
    },
    "packageRules": [
        {
            "matchPackageNames": [
              "devextreme",
              "devextreme-angular",
              "devextreme-react",
              "devextreme-vue"
            ],
            "enabled": false
        }
    ],
    "reviewers": [
        "team:devextreme-devops"
    ],
    "ignorePaths": [
        ".github"
    ]
}
